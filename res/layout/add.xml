<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/addDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="@string/addDesc" />
    
    <TableLayout
        android:id="@+id/tableAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TableRow 
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
       			android:id="@+id/circlePic"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:src="@drawable/circle"
        		android:onClick="circleClicked"
        		android:layout_marginRight="40dp" />
            <ImageView
       			android:id="@+id/squarePic"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:src="@drawable/square"
        		android:onClick="rectangleClicked" 
        		android:layout_marginLeft="40dp"/>
    	</TableRow>
    	<TableRow 
            android:gravity="center"
            android:layout_marginTop="30dp">
            <ImageView
       			android:id="@+id/trianglePic"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:onClick="triangleClicked"
        		android:src="@drawable/triangle"/>

    	</TableRow>
    </TableLayout>

</LinearLayout>