<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ColorPickerDialog" parent="@android:style/Theme.Dialog">
            <item name="android:windowTitleStyle">@style/ColorPickerDialogTitle</item>
            <item name="android:width">200dp</item>
    </style>
    <style name="ColorPickerDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="DialogWindowTitle">
        <item name="android:maxLines">2</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>
</resources>